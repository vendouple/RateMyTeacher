@model AdminDashboardViewModel
@{
    ViewData["Title"] = "Admin dashboard";
}

<section class="py-4">
    <div class="d-flex justify-content-between align-items-center mb-4 flex-wrap gap-3">
        <div>
            <h1 class="h3 mb-0">Admin dashboard</h1>
            <p class="text-muted mb-0">Monitor usage, keep bonuses flowing, and stay ahead of AI controls.</p>
        </div>
        <a class="btn btn-outline-secondary" asp-controller="Settings" asp-action="AiControls">AI controls</a>
    </div>

    <div class="row row-cols-1 row-cols-md-2 row-cols-xl-4 g-3">
        @foreach (var card in Model.Cards)
        {
            <div class="col">
                <div class="card shadow-sm h-100">
                    <div class="card-body">
                        <p class="text-muted text-uppercase fw-semibold small mb-1">@card.Title</p>
                        <h2 class="h3 mb-2">@card.Value</h2>
                        <p class="text-muted mb-3">@card.Description</p>
                        @if (!string.IsNullOrWhiteSpace(card.ActionController) && !string.IsNullOrWhiteSpace(card.ActionName))
                        {
                            <a class="btn btn-sm btn-outline-primary" asp-controller="@card.ActionController" asp-action="@card.ActionName">@(!string.IsNullOrWhiteSpace(card.ActionText) ? card.ActionText : "View details")</a>
                        }
                    </div>
                </div>
            </div>
        }
    </div>

    <div class="row g-4 mt-1">
        <div class="col-lg-7">
            <div class="card shadow-sm h-100">
                <div class="card-header">Recent activity</div>
                <div class="card-body">
                    @if (Model.Activities.Count == 0)
                    {
                        <p class="text-muted mb-0">No recent events yet. As AI usage and onboarding pick up they will appear here.</p>
                    }
                    else
                    {
                        <ul class="list-group list-group-flush">
                            @foreach (var activity in Model.Activities)
                            {
                                <li class="list-group-item px-0">
                                    <div class="d-flex justify-content-between">
                                        <div>
                                            <div class="fw-semibold">@activity.Title</div>
                                            <div class="text-muted small">@activity.Description</div>
                                        </div>
                                        <span class="text-muted small">@activity.Timestamp.ToLocalTime().ToString("g")</span>
                                    </div>
                                </li>
                            }
                        </ul>
                    }
                </div>
            </div>
        </div>
        <div class="col-lg-5">
            <div class="card shadow-sm h-100">
                <div class="card-header">Quick links</div>
                <div class="card-body">
                    <div class="list-group list-group-flush">
                        @foreach (var link in Model.QuickLinks)
                        {
                            <a class="list-group-item list-group-item-action"
                               asp-controller="@link.Controller" asp-action="@link.Action">@link.Label</a>
                        }
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>
