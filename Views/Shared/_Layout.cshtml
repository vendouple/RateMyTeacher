@using System.Globalization
@using System.Security.Claims
@{
    var currentController = ViewContext.RouteData.Values["controller"]?.ToString();
    var currentAction = ViewContext.RouteData.Values["action"]?.ToString();
    var isAuthenticated = User?.Identity?.IsAuthenticated ?? false;
    var isAdmin = User?.IsInRole("Admin") ?? false;
    var isTeacher = User?.IsInRole("Teacher") ?? false;
    var displayName = User?.Identity?.Name ?? User?.FindFirstValue(ClaimTypes.Email) ?? "User";
}
<!DOCTYPE html>
<html lang="@CultureInfo.CurrentUICulture.Name" data-theme="light">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - RateMyTeacher</title>
    <script>
        (function () {
            const storageKey = "rmt-theme";
            const storedTheme = window.localStorage ? window.localStorage.getItem(storageKey) : null;
            const prefersDark = window.matchMedia && window.matchMedia("(prefers-color-scheme: dark)").matches;
            const theme = storedTheme || (prefersDark ? "dark" : "light");
            document.documentElement.setAttribute("data-theme", theme);
            document.documentElement.style.colorScheme = theme;
        })();
    </script>
    <script type="importmap"></script>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/neuromorphic.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/RateMyTeacher.styles.css" asp-append-version="true" />
    <script src="~/js/theme.js" asp-append-version="true" defer></script>
    @await RenderSectionAsync("Styles", required: false)
</head>
<body>
    <button id="themeToggle" class="theme-toggle" type="button" aria-live="polite" aria-label="Toggle color theme">
        <span aria-hidden="true" data-theme-icon>🌙</span>
    </button>
    <header>
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light bg-white border-bottom box-shadow mb-3">
            <div class="container-fluid">
                <a class="navbar-brand" asp-area="" asp-controller="Home" asp-action="Index">RateMyTeacher</a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
                    <ul class="navbar-nav flex-grow-1">
                        <li class="nav-item">
                            <a class="nav-link text-dark @(currentController == "Home" ? "active" : string.Empty)"
                               asp-area="" asp-controller="Home" asp-action="Index">Home</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-dark @(currentController == "Teachers" ? "active" : string.Empty)"
                               asp-area="" asp-controller="Teachers" asp-action="Index">Teachers</a>
                        </li>
                        @if (isAuthenticated)
                        {
                            <li class="nav-item">
                                <a class="nav-link text-dark @(currentController == "Ratings" ? "active" : string.Empty)"
                                   asp-area="" asp-controller="Ratings" asp-action="History">My Ratings</a>
                            </li>
                        }
                        @if (isTeacher)
                        {
                            <li class="nav-item">
                                <a class="nav-link text-dark @(currentController == "Schedule" && currentAction == "Today" ? "active" : string.Empty)"
                                   asp-area="" asp-controller="Schedule" asp-action="Today">Schedule</a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link text-dark @(currentController == "Attendance" ? "active" : string.Empty)"
                                   asp-area="" asp-controller="Attendance" asp-action="Index">Attendance</a>
                            </li>
                        }
                        @if (isAdmin)
                        {
                            <li class="nav-item dropdown">
                                <a class="nav-link dropdown-toggle text-dark @(currentController == "Admin" ? "active" : string.Empty)" href="#" role="button" data-bs-toggle="dropdown" aria-expanded="false">
                                    Admin
                                </a>
                                <ul class="dropdown-menu">
                                    <li>
                                        <a class="dropdown-item" asp-controller="Admin" asp-action="Leaderboard">Leaderboard</a>
                                    </li>
                                    <li>
                                        <a class="dropdown-item" asp-controller="Admin" asp-action="Sentiment">Sentiment</a>
                                    </li>
                                    <li>
                                        <a class="dropdown-item" asp-controller="Settings" asp-action="Bonus">Bonus Config</a>
                                    </li>
                                </ul>
                            </li>
                        }
                    </ul>
                    <ul class="navbar-nav">
                        @if (isAuthenticated)
                        {
                            <li class="nav-item d-flex align-items-center me-2">
                                <span class="nav-link text-dark">Hello, @displayName</span>
                            </li>
                            <li class="nav-item">
                                <form asp-controller="Account" asp-action="Logout" method="post" class="d-inline">
                                    @Html.AntiForgeryToken()
                                    <button type="submit" class="btn btn-link nav-link text-dark">Sign out</button>
                                </form>
                            </li>
                        }
                        else
                        {
                            <li class="nav-item">
                                <a class="nav-link text-dark @(currentController == "Account" ? "active" : string.Empty)" asp-controller="Account" asp-action="Login">Sign in</a>
                            </li>
                        }
                    </ul>
                </div>
            </div>
        </nav>
    </header>
    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer class="border-top footer text-muted">
        <div class="container">
            &copy; 2025 - RateMyTeacher - <a asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>
        </div>
    </footer>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
